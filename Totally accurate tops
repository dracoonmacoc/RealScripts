--// SERVICES
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

--// MAIN GUI (dynamic square)
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "HighlightMainGUI"
ScreenGui.Parent = game.CoreGui
ScreenGui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0.4, 0, 0.4, 0)
MainFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
MainFrame.Active = true
MainFrame.Draggable = true
MainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
MainFrame.Parent = ScreenGui
Instance.new("UICorner", MainFrame)

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(0.9, 0, 0.15, 0)
Title.Position = UDim2.new(0.05, 0, 0.05, 0)
Title.Text = "Highlight ESP"
Title.TextScaled = true
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Parent = MainFrame

-- Buttons for highlights
local function createButton(name, yScale)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.8, 0, 0.15, 0)
    btn.Position = UDim2.new(0.1, 0, yScale, 0)
    btn.BackgroundColor3 = Color3.fromRGB(70,70,70)
    btn.Text = name .. ": ON"
    btn.TextScaled = true
    btn.Parent = MainFrame
    Instance.new("UICorner", btn)
    return btn
end

local categories = {Paper=true, Meteor=true}
local buttons = {}
buttons.Paper = createButton("Paper",0.3)
buttons.Meteor = createButton("Meteor",0.55)

--// HIGHLIGHT LOGIC
local highlights = {}

local function highlightPart(part, color)
    if not part or not part:IsA("BasePart") then return end
    if highlights[part] then return end
    local h = Instance.new("Highlight")
    h.FillColor = color
    h.OutlineColor = Color3.fromRGB(255,255,255)
    h.Parent = part
    highlights[part] = {highlight=h, color=color}
end

local function removeHighlight(part)
    if highlights[part] then
        highlights[part].highlight:Destroy()
        highlights[part] = nil
    end
end

-- Highlight a model by looping all BaseParts inside
local function highlightModel(model, color)
    if not model or not model:IsA("Model") then return end
    for _, part in pairs(model:GetDescendants()) do
        if part:IsA("BasePart") then
            highlightPart(part, color)
        end
    end
end

local function removeModelHighlight(model)
    if not model or not model:IsA("Model") then return end
    for _, part in pairs(model:GetDescendants()) do
        if part:IsA("BasePart") then
            removeHighlight(part)
        end
    end
end

-- Check part or model for highlighting
local function checkObject(obj)
    if obj:IsA("BasePart") then
        local lowerName = obj.Name:lower()
        if lowerName == "paper" and categories.Paper then
            highlightPart(obj, Color3.fromRGB(255,255,0))
        elseif highlights[obj] then
            removeHighlight(obj)
        end
    elseif obj:IsA("Model") then
        if obj.Name:lower() == "meteor" then
            if categories.Meteor then
                highlightModel(obj, Color3.fromRGB(255,0,0))
            else
                removeModelHighlight(obj)
            end
        end
    end
end

local function updateHighlights()
    for _, obj in pairs(workspace:GetDescendants()) do
        checkObject(obj)
    end
end

-- Recursive listener for new objects
local function listenDescendants(parent)
    parent.DescendantAdded:Connect(function(obj)
        checkObject(obj)
    end)
end

-- Listen to existing workspace
for _, obj in pairs(workspace:GetDescendants()) do
    listenDescendants(obj)
end

workspace.DescendantAdded:Connect(function(obj)
    checkObject(obj)
    listenDescendants(obj)
end)

-- Initial highlight
task.spawn(updateHighlights)

--// BUTTON CONNECTIONS
for cat, btn in pairs(buttons) do
    btn.MouseButton1Click:Connect(function()
        categories[cat] = not categories[cat]
        btn.Text = cat .. (categories[cat] and ": ON" or ": OFF")
        updateHighlights()
    end)
end

--// GUI OPENER BUTTON (small, draggable)
local ToggleGUI = Instance.new("ScreenGui")
ToggleGUI.Name = "HighlightToggleGUI"
ToggleGUI.Parent = game.CoreGui
ToggleGUI.ResetOnSpawn = false

local ToggleFrame = Instance.new("Frame")
ToggleFrame.Size = UDim2.new(0, 30, 0, 30)
ToggleFrame.Position = UDim2.new(0.01, 0, 0.9, 0)
ToggleFrame.Active = true
ToggleFrame.Draggable = true
ToggleFrame.BackgroundColor3 = Color3.fromRGB(35,35,35)
ToggleFrame.Parent = ToggleGUI
Instance.new("UICorner", ToggleFrame)

ToggleFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or
       input.UserInputType == Enum.UserInputType.Touch then
        MainFrame.Visible = not MainFrame.Visible
    end
end)

-- Keep MainFrame square dynamically
RunService.RenderStepped:Connect(function()
    local screenSize = workspace.CurrentCamera.ViewportSize
    local scale = math.min(screenSize.X*0.4, screenSize.Y*0.4)
    MainFrame.Size = UDim2.new(0, scale, 0, scale)
end)
